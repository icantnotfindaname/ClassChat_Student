<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment_SelfInformationCenter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head_layout"
        android:orientation="vertical"
        android:background="#BB00D8A0">

        <LinearLayout
            android:id="@+id/uesr_inform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/head_click"
                android:clickable="true"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="唠客"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <ImageButton
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:id="@+id/btn_guide_me"
                        android:background="@drawable/guide"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/user_stuID"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="182****5882"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourbuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_layout"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/anquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/anquan"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账号信息"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12sp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/kecheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/kecheng"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的课程"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12sp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/shoucang"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12sp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/shezhi"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/shezhi"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12sp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourbuttons"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="60dp"-->
        <!--android:text=""-->
        <!--android:background="#00FFFFFF"/>-->

        <LinearLayout
            android:layout_marginTop="15dp"
            android:id="@+id/shimingrenzheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/renzheng"/>

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="实名认证"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="17dp"
                android:background="@drawable/right" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/bangzhuyufankui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bianji"/>

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="帮助与反馈"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="17dp"
                android:background="@drawable/right" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/aboutus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/kefu"/>

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="关于我们"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="17dp"
                android:background="@drawable/right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_manual"/>

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="用户手册"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="17dp"
                android:background="@drawable/right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_for_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_check_update"/>

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="检查更新"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="17dp"
                android:background="@drawable/right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quit"
            android:background="#F7F7F7"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:text="退 出 登 录"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>